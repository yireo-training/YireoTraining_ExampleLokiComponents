<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd" layout="1column">
    <update handle="loki_components"/>

    <body>
        <referenceContainer name="content">
            <block name="loki-component-example.comments-add" template="YireoTraining_ExampleLokiComponents::comments/comments-add.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">ExampleLokiComponentsComments</argument>
                </arguments>
            </block>

            <block name="loki-component-example.comments-listing" template="YireoTraining_ExampleLokiComponents::comments/comments-listing.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">ExampleLokiComponentsComments</argument>
                </arguments>
            </block>

            <block name="loki-component-example.comments-counter" template="YireoTraining_ExampleLokiComponents::comments/comments-counter.phtml"/>
        </referenceContainer>

        <referenceBlock name="loki.script.component">
            <block name="loki-component-example.comments-script" template="YireoTraining_ExampleLokiComponents::comments/comments-script.phtml"/>
        </referenceBlock>
    </body>
</page>
