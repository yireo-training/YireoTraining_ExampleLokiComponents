<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <update handle="loki_components"/>

    <body>
        <referenceContainer name="content">
            <block name="example-loki-components.random" template="YireoTraining_ExampleLokiComponents::random.phtml"/>
            <block name="example-loki-components.like" template="YireoTraining_ExampleLokiComponents::like.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">LokiComponentToggle</argument>
                </arguments>
            </block>

            <block name="example-loki-components.comments-add" template="YireoTraining_ExampleLokiComponents::comments/comments-add.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">ExampleLokiComponentsComments</argument>
                </arguments>
            </block>

            <block name="example-loki-components.comments-listing" template="YireoTraining_ExampleLokiComponents::comments/comments-listing.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">ExampleLokiComponentsComments</argument>
                </arguments>
            </block>

            <block name="example-loki-components.comments-counter" template="YireoTraining_ExampleLokiComponents::comments/comments-counter.phtml"/>

            <block name="example-loki-components.switcher" template="YireoTraining_ExampleLokiComponents::switcher/example1.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">LokiComponentToggle</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="loki-components">
            <block name="example-loki-components.comments-script" template="YireoTraining_ExampleLokiComponents::comments/comments-script.phtml"/>
        </referenceContainer>
    </body>
</page>
