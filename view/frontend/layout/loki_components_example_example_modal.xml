<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <update handle="loki_components"/>

    <body>
        <referenceContainer name="content">
            <block name="example-loki-components.modal" template="YireoTraining_ExampleLokiComponents::modal.phtml">
                <arguments>
                    <argument name="js_component_name" xsi:type="string">ExampleLokiModalComponent</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="loki-components">
            <block name="example-loki-components.modal-component" template="YireoTraining_ExampleLokiComponents::modal/modal-component.phtml"/>
        </referenceContainer>
    </body>
</page>
