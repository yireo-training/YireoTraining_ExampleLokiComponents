<?xml version="1.0" encoding="UTF-8" ?>
<components xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Yireo_LokiComponents:etc/loki_components.xsd">
    <componentGroup name="default">
        <component
            name="example-loki-components.random"/>

        <component
            name="example-loki-components.like"
            context="YireoTraining\ExampleLokiComponents\Component\Generic\GenericContext"
            viewModel="YireoTraining\ExampleLokiComponents\Component\Like\LikeViewModel"
            repository="YireoTraining\ExampleLokiComponents\Component\Like\LikeRepository">
            <filter name="numeric"/>
        </component>

        <component
            name="example-loki-components.switcher"
            context="YireoTraining\ExampleLokiComponents\Component\Generic\GenericContext"
            viewModel="YireoTraining\ExampleLokiComponents\Component\Switcher\SwitcherViewModel"
            repository="YireoTraining\ExampleLokiComponents\Component\Switcher\SwitcherRepository">
            <filter name="numeric"/>
        </component>
    </componentGroup>

    <componentGroup
        defaultContext="YireoTraining\ExampleLokiComponents\Component\Generic\GenericContext"
        defaultViewModel="YireoTraining\ExampleLokiComponents\Component\Comments\CommentsViewModel"
        defaultRepository="YireoTraining\ExampleLokiComponents\Component\Comments\CommentsRepository"
    >
        <component name="example-loki-components.comments-add">
            <target name="example-loki-components.comments-listing"/>
            <target name="example-loki-components.comments-counter"/>
            <validator name="required"/>
        </component>

        <component name="example-loki-components.comments-listing"/>
        <component name="example-loki-components.comments-counter"/>
    </componentGroup>
</components>
