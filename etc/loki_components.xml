<?xml version="1.0" encoding="UTF-8" ?>
<components xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Loki_Components:etc/loki_components.xsd">

    <component name="loki-component-example.random"/>

    <component name="loki-component-example.modal.modal1"/>
    <component name="loki-component-example.modal.modal2"/>
    <component name="loki-component-example.modal.modal3"/>
    <component name="loki-component-example.modal.modal4"/>

    <component
        name="loki-component-example.like"
        viewModel="YireoTraining\ExampleLokiComponents\Component\Like\LikeViewModel"
        repository="YireoTraining\ExampleLokiComponents\Component\Like\LikeRepository">
        <filter name="number"/>
    </component>

    <component
        name="loki-component-example.switcher"
        viewModel="YireoTraining\ExampleLokiComponents\Component\Switcher\SwitcherViewModel"
        repository="YireoTraining\ExampleLokiComponents\Component\Switcher\SwitcherRepository">
        <filter name="number"/>
    </component>

    <group
        name="comments"
        context="Loki\Components\Component\ComponentContext"
        viewModel="YireoTraining\ExampleLokiComponents\Component\Comments\CommentsViewModel"
        repository="YireoTraining\ExampleLokiComponents\Component\Comments\CommentsRepository"
    />

    <component
        name="loki-component-example.comments-add"
        group="comments">
        <target name="loki-component-example.comments-listing"/>
        <target name="loki-component-example.comments-counter"/>
        <validator name="required"/>
    </component>

    <component
        name="loki-component-example.comments-listing"
        group="comments">
        <target name="loki-component-example.comments-counter"/>
    </component>

    <component
        name="loki-component-example.comments-counter"
        group="comments"
    />

    <component
        name="loki-component-example.notification"
        repository="YireoTraining\ExampleLokiComponents\Component\Notification\NotificationRepository"
    />

    <component
        name="loki-component-example.exceptions"
        repository="YireoTraining\ExampleLokiComponents\Component\ExceptionTest\ExceptionTestRepository">
    </component>
</components>
